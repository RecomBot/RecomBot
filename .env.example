# Telegram Bot (для бота и бэкенда)
BOT_TOKEN=your_telegram_bot_token_here

# База данных (PostgreSQL)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=travel_db
POSTGRES_HOST=postgres          
POSTGRES_PORT=5432

# Для локального запуска:
# POSTGRES_HOST=localhost

DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# LLM (Ollama Cloud)
OLLAMA_BASE_URL=https://ollama.com
OLLAMA_MODEL=qwen3-coder:480b-cloud
OLLAMA_API_KEY=secret

# Кэш и сессии (Redis)
REDIS_URL=redis://redis:6379/0

# JWT Аутентификация (только для бэкенда)
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this_in_production_123
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# URLs (для интеграции)
# Бот → бэкенд
API_BASE_URL=http://localhost:8001/api/v1          # локально
# API_BASE_URL=http://backend:8000/api/v1          # внутри Docker

# Бэкенд → бот (webhooks, уведомления — опционально)
BOT_WEBHOOK_URL=https://yourdomain.com/webhook